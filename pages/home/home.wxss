/* 导航 */
scroll-view{
    width:100%;
    white-space: nowrap;
}
scroll-view text{
    display:inline-block;
    padding-left: 16px;
    padding-right: 16px;
    color:#adadad;
    font-size:18px;
    line-height:55px;
    transition:all 0.3s;
}
scroll-view text.active{
    color:#333;
    font-weight:bold;
}
/* 内容 */
.area{
  padding-bottom:5px;
  border-bottom:10px solid #dedede;
}
.area:last-child{
    border-bottom:none;
}
.image_poster{
  width:100%;
}
.poster{
    position:relative;
}
.play_icon{
  width:60px;
  height:60px;
  position:absolute;
  top:50%;
  left:50%;
  transform:translate(-50%,-50%) 
}
.info{
  padding:5px 15px;
  font-size:12px;
  color:#292929;
}
.title{
  margin-bottom:5px;
  font-size: 15px;
  line-height: 26px;
  color: #292929;
  display:block;
  font-size:15px;
}
.view_eye,.view_comment{
  display:inline-block;
}
.image_comment,.image_eye{
  display:inline-block;
  margin-right:5px;
  vertical-align:middle;
}
.image_eye{
  width:16px;
  height:11px;
}
.view_comment{
  float:right;
}
.image_comment{
  width:17px;
  height:16px;
}